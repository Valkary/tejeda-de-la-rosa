---
type Headshot = { name: string; src: string, title: string };
const headshots: Headshot[] = [
    { name: "Nombre 1", src: "/headshots/1.png", title: "titulo profesional" },
    { name: "Nombre 2", src: "/headshots/2.png", title: "titulo profesional" },
    { name: "Nombre 3", src: "/headshots/3.png", title: "titulo profesional" },
    { name: "Nombre 4", src: "/headshots/4.png", title: "titulo profesional" },
    { name: "Nombre 5", src: "/headshots/5.png", title: "titulo profesional" },
    { name: "Nombre 6", src: "/headshots/6.png", title: "titulo profesional" },
    { name: "Nombre 7", src: "/headshots/7.png", title: "titulo profesional" },
];
---

<div
    class="w-full inline-flex flex-nowrap overflow-x-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]"
>
    <ul
        class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll"
    >
        {
            [...headshots, ...headshots, ...headshots].map(
                ({ src, name, title }, idx) => (
                    <li aria-hidden={idx >= headshots.length} class="text-center flex flex-col items-center">
                        <div class="aspect-square h-36 sm:h-44 md:h-56 rounded-full overflow-hidden">
                            <img src={src} alt={name} class="object-cover object-center w-full h-full" />
                        </div>
                        <span class="uppercase tracking-wide font-bold">{name}</span>
                        <span class="text-tejeda-secondary font-light italic">{title}</span>
                    </li>
                ),
            )
        }
    </ul>
</div>